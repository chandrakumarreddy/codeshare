extends layouts/layout

block content
  h1.text-center.mt-4 Contact Us
  section.row.no-gutters
    form.col-sm-8.offset-sm-2.col-md-4.offset-md-4.mt-4(method='post' action='/contactus')
      .form-group
        label(for='email') Email address
        input#email.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter email' name='email' value=email class=hasError(errors,'email') ? 'is-invalid' : '')
        small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
        if(hasError(errors, 'email'))
          .invalid-feedback #{getError(errors, 'email').msg}
      .form-group
        label(for='password') Password
        input#password.form-control(type='password' placeholder='Password' name='password' value=password class=hasError(errors,'password')? 'is-invalid' : '')
        if(hasError(errors, 'email'))
          .invalid-feedback #{getError(errors, 'password').msg}
      .form-group
        label(for='message') Message
        textarea#message.form-control(rows='3' placeholder='Enter Message' name='message' class=hasError(errors,'message')? 'is-invalid' : '') #{message}
        if(hasError(errors, 'email'))
          .invalid-feedback #{getError(errors, 'message').msg}
      button.btn.btn-primary(type='submit') Submit
